

@{
    ViewData["Title"] = "Index";
}



<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List Of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>


<table id="myTableC" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

@section scripts {
    <script src="~/js/Category.js"></script>
}